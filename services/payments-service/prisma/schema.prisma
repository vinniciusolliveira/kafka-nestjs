generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client/payments"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int           @id @default(autoincrement())
  amount    Float
  orderId   Int
  clientId  Int
  createdAt DateTime      @default(now())
  status    PaymentStatus
}

enum PaymentStatus {
  APPROVED
  REJECTED
}
